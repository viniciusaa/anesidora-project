<%= render "shared/title", title: "Add contributor", subtitle: "" %>

<% if @users.any? %>
  <% @users.each do |user| %>
    <div class="card border-success space col-sm-12 col-lg-8">
      <div class="card-body">
        <h5 class="card-title">
          <u><%= link_to user.full_name, user_path(user), class: "text-dark" %></u>
          <%= link_to "Add", article_contributor_path(@article, user), :method=> :put, class: "btn btn-success btn-sm" %>
        </h5>
        <p class="card-text" style="margin:0;">Number of articles: <%= user.articles.count %></p>
        <p class="card-text">Signed in: <%= user.created_at.strftime("%d/%m/%Y") %></p>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="mspace danger"><b>No users left to contribute</b></p>
<% end %>
