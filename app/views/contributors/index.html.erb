<%= render "shared/title", title: "Add contributor", subtitle: "" %>

<% if @users.any? %>
  <div class="offset-5">
    <%= will_paginate @users %>
  </div>
  <% @users.each do |user| %>
    <div class="card border-success space col-sm-12 col-lg-8">
      <div class="card-body">
        <h5 class="card-title">
          <u><%= link_to user.full_name, user_path(user), class: "text-dark" %></u>
          <%= link_to "Add", add_contributor_to_article_article_contributor_path(@article, user), class: "btn btn-sm btn-success" %>
        </h5>
        <p class="card-text">
          Number of articles: <%= user.articles.count %>
          <br />
          Number of contributions: <%= user.collaborations.count %>
          <br />
          Signed in: <%= user.created_at.strftime("%d/%m/%Y") %>
        </p>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="mspace danger"><b>No users left to contribute</b></p>
<% end %>
